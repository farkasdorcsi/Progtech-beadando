<Window x:Class="Prog_korny_wpf_beadando.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prog_korny_wpf_beadando"
        mc:Ignorable="d"
        Title="Regisztráció" Height="350" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Felhasználónév"/>
            <TextBox x:Name="UsernameBox" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Jelszó"/>
            <PasswordBox x:Name="PasswordBox" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Email cím"/>
            <TextBox x:Name="EmailBox" Height="30"/>
        </StackPanel>


        <Button Content="Regisztráció"
                Grid.Row="3"
                Width="150"
                Height="35"
                Click="RegisterButton_Click"
                Background="#2196F3"
                Foreground="White"
                FontWeight="Bold"
                FontSize="14"
                HorizontalAlignment="Center"
                Cursor="Hand"/>
        
    </Grid>
</Window>
